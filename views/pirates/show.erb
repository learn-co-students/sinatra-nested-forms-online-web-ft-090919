<h1>Pirate</h1>
  <h4>Name: <%= @pirate.name %></h4>
  <h4>Height: <%= @pirate.height %></h4>
  <h4>Weight: <%= @pirate.weight %></h4>

  <% @ships.each.with_index(1) do |ship, index| %>
    <h2>Ship #<%= index %></h2>
    Name: <%= ship.name %><br />
    Type: <%= ship.type %><br />
    Booty: <%= ship.booty %><br />
  <% end %>
